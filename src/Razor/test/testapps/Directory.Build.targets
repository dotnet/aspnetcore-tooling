<Project>
  <Import Project="RazorTest.Introspection.targets" />

  <PropertyGroup>
    <RuntimeFrameworkVersion Condition=" '$(TargetFramework)' == 'netcoreapp3.0' ">$(MicrosoftNETCoreApp30PackageVersion)</RuntimeFrameworkVersion>
    <!-- aspnet/BuildTools#662 Don't police what version of NetCoreApp we use -->
    <NETCoreAppMaximumVersion>99.9</NETCoreAppMaximumVersion>
  </PropertyGroup>

  <!-- Make sure test apps can be restored in any order. -->
  <Target Name="_CreatePackageSourceDirectory" BeforeTargets="_GenerateRestoreGraph">
    <MakeDir Directories="$(MSBuildThisFileDirectory)TestPackageRestoreSource" />
  </Target>
</Project>
