{
  "comments": {
    "lineComment": "//",
    "blockComment": [ "/*", "*/" ]
  },
  "brackets": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ]
  ],
  "autoClosingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    {
      "open": "'",
      "close": "'",
      "notIn": [ "string", "comment" ]
    },
    {
      "open": "\"",
      "close": "\"",
      "notIn": [ "string", "comment" ]
    }
  ],
  "surroundingPairs": [
    [ "{", "}" ],
    [ "[", "]" ],
    [ "(", ")" ],
    [ "<", ">" ],
    [ "'", "'" ],
    [ "\"", "\"" ]
  ],
  "folding": {
    "markers": {
      "start": "^\\s*#region\\b",
      "end": "^\\s*#endregion\\b"
    }
  },
  "indentationRules": {
    "increaseIndentPattern": "^((?!\\/\\/).)*(\\{([^}\"'`]*|(\\t|[ ])*\\/\\/.*)|\\([^)\"'`]*|\\[[^\\]\"'`]*)$",
    "decreaseIndentPattern": "^((?!.*?\\/\\*).*\\*\\/)?\\s*[\\}\\]].*$",
    "unIndentedLinePattern": "^(\\t|[ ])*[ ]\\*[^/]*\\*\\/\\s*$|^(\\t|[ ])*[ ]\\*\\/\\s*$|^(\\t|[ ])*[ ]\\*([ ]([^\\*]|\\*(?!\\/))*)?$"
  },
  "wordPattern": "(-?\\d*\\.\\d\\w*)|([^\\`\\~\\!\\@\\%\\^\\&\\*\\(\\)\\-\\=\\+\\[\\{\\]\\}\\\\\\|\\;\\:\\'\\\"\\,\\.\\<\\>\\/\\?\\s]+)"
}